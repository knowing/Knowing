<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Monitor Category"
            id="de.lmu.ifi.dbs.medmon.visualizer">
      </category>
      <view
            name="Monitor View"
            icon="icons/sample.gif"
            category="de.lmu.ifi.dbs.medmon.visualizer"
            class="de.lmu.ifi.dbs.medmon.visualizer.views.MonitorView"
            id="de.lmu.ifi.dbs.medmon.visualizer.views.MonitorView">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.lmu.ifi.dbs.medmon.visualizer.perspectives.DefaultPerspectiveFactory"
            id="de.lmu.ifi.dbs.medmon.visualizer.default"
            name="Visualize">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.lmu.ifi.dbs.medmon.visualizer.default">
         <view
               id="de.lmu.ifi.dbs.medmon.visualizer.views.MonitorView"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="de.lmu.ifi.dbs.medmon.sensor.SensorDataView"
               minimized="false"
               ratio="0.5f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="de.lmu.ifi.dbs.medmon.algorithm.views.AlgorithmView"
               minimized="false"
               ratio="0.5f"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
